                         <div className="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600"><MessageCircle size={20} /></div>
                         <div>
                           <div className="font-bold">–í–ö–æ–Ω—Ç–∞–∫—Ç–µ</div>
                           <div className="text-xs text-gray-500">–û—Ç–∑—ã–≤—ã –∏ –∞–∫—Ü–∏–∏</div>
                         </div>
                      </a>
                   </div>
                </div>
              </div>
            </div>

            <div className="lg:w-1/2 h-[400px] bg-stone-200 rounded-3xl overflow-hidden shadow-lg relative border border-stone-200">
               <iframe 
                src="https://yandex.ru/map-widget/v1/?ll=56.229431%2C57.976668&z=17&pt=56.229431%2C57.976668,pm2dgl" 
                width="100%" 
                height="100%" 
                frameBorder="0" 
                allowFullScreen={true}
                title="Location Map"
                className="w-full h-full"
               ></iframe>
            </div>
          </div>
        </div>
      </section>

      {/* Footer */}
      <footer className="bg-gray-900 text-gray-400 py-12 border-t border-gray-800">
        <div className="container mx-auto px-4 text-center md:text-left">
           <div className="flex flex-col md:flex-row justify-between items-center gap-6">
             <div className="flex items-center gap-2">
               <Scissors className="text-emerald-500" />
               <span className="font-bold text-white text-lg">–°—Ç–∏–ª—å–Ω–æ –∏ —Ç–æ—á–∫–∞</span>
             </div>
             <p className="text-sm opacity-60">&copy; {new Date().getFullYear()} –ü–µ—Ä–º—å. –í—Å–µ –ø—Ä–∞–≤–∞ –∑–∞—â–∏—â–µ–Ω—ã.</p>
           </div>
        </div>
      </footer>
    </div>
  );
};

export default App;